# Supabase Configuration
# Copy this file to .env.local and fill in your actual values
# IMPORTANT: .env.local is NOT committed to Git for security reasons

# Supabase URL (from your Supabase project settings)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url

# Supabase Anonymous Key (from your Supabase project settings)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Optional: Supabase Service Role Key (for admin functions)
# SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Admin Authentication (Change these in production!)
NEXT_PUBLIC_ADMIN_USERNAME=admin
NEXT_PUBLIC_ADMIN_PASSWORD=secure_password_here

# Database Configuration
DATABASE_URL=your_database_connection_string

# Storage Configuration
STORAGE_BUCKET=card-images
STORAGE_FOLDER=uploads

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# External Services
PAYMENT_GATEWAY_API_KEY=your_payment_gateway_key
SMS_SERVICE_API_KEY=your_sms_service_key

# Monitoring
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info

# For Vercel deployment, add these environment variables in Vercel dashboard:
# 1. Go to your project settings
# 2. Navigate to Environment Variables
# 3. Add the above variables with your actual values
